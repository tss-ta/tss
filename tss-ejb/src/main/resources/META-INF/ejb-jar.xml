    <!-- Test implementation added by @bbuallbest -->
    <description>Example of a session bean</description>
    <display-name>MyTimeBeanEJBName</display-name>
    <enterprise-beans>
        <session id="Session_MyTime">
            <description>An EJB named MyTimeBean</description>
            <display-name>TestBeanName</display-name>
            <ejb-name>TestBean</ejb-name>
            <local-home>com.netcracker.ejb.TestLocalHome</local-home>
            <local>com.netcracker.ejb.TestLocal</local>
            <ejb-class>com.netcracker.ejb.TestBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>

            <ejb-local-ref>
                <ejb-ref-name>ejb/TestBean</ejb-ref-name>
                <ejb-ref-type>Session</ejb-ref-type>
                <local-home>com.netcracker.ejb.TestLocalHome</local-home>
                <local>com.netcracker.ejb.TestLocal</local>
            </ejb-local-ref>
        </session>
        
        <session>
            <description>An EJB named RegistrationBean</description>
            <display-name>RegistrationBean</display-name>
            <ejb-name>RegistrationBean</ejb-name>
            <local-home>com.netcracker.ejb.RegistrationBeanLocalHome</local-home>
            <local>com.netcracker.ejb.RegistrationBeanLocal</local>
            <ejb-class>com.netcracker.ejb.RegistrationBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
            
            <ejb-local-ref>
                <ejb-ref-name>ejb/RegistrationBean</ejb-ref-name>
                <ejb-ref-type>Session</ejb-ref-type>
                <local-home>com.netcracker.ejb.RegistrationBeanLocalHome</local-home>
                <local>com.netcracker.ejb.RegistrationBeanLocal</local>
            </ejb-local-ref>
        </session>  
        
        <session>
            <display-name>GroupBean</display-name>
            <ejb-name>GroupBean</ejb-name>
            <local-home>com.netcracker.ejb.GroupBeanLocalHome</local-home>
            <local>com.netcracker.ejb.GroupBeanLocal</local>
            <ejb-class>com.netcracker.ejb.GroupBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
            
            <ejb-local-ref>
                <ejb-ref-name>ejb/GroupBean</ejb-ref-name>
                <ejb-ref-type>Session</ejb-ref-type>
                <local-home>com.netcracker.ejb.GroupBeanLocalHome</local-home>
                <local>com.netcracker.ejb.GroupBeanLocal</local>
            </ejb-local-ref>
        </session>
        
    </enterprise-beans>
</ejb-jar>